    color: #6a1a14;
}

QFrame#calc_quality_status_card {
    background: #ffffff;
    border: 1px solid #cfd8e2;
    border-radius: 10px;
}

QFrame#calc_quality_status_card[qualityState="bad"] {
    border-left: 4px solid #dc2626;
}

QFrame#calc_quality_status_card[qualityState="good"] {
    border-left: 4px solid #16a34a;
}

QLabel#calc_quality_status_icon {
    font-size: 14px;
}

QLabel#calc_quality_status_title {
    color: #334155;
    font-size: 11px;
    font-weight: 600;
}

QLabel#calc_quality_status_value {
    color: #0b1a2a;
    font-size: 16px;
    font-weight: 800;
}

QLabel#calc_quality_status_count {
    color: #5b6775;
    font-size: 10px;
    qproperty-alignment: 'AlignHCenter|AlignVCenter';
}

QFrame#calc_quality_issues,
QFrame#calc_quality_scoring {
    background: #ffffff;
    border: 1px solid #d7e0eb;
    border-radius: 10px;
}

QLabel#calc_quality_issues_title {
    color: #1f2f43;
    font-size: 12px;
    font-weight: 700;
}

QLabel#calc_quality_issue_item,
QLabel#calc_quality_rule_item {
    color: #334155;
    font-size: 11px;
}

QLabel#calc_quality_issue_more {
    color: #5b6775;
    font-size: 10px;
    font-style: italic;
}

QLabel#calc_quality_good {
    color: #185d2c;
    font-size: 12px;
    font-weight: 600;
}

QLabel#calc_quality_footer {
    color: #5b6775;
    font-size: 11px;
}

/* Calculations - shared section styles (Recycled + Days tabs) */
QFrame#calc_metric_header,
QFrame#calc_days_header {
    background: #f5f8fc;
    border: 1px solid #d7e0eb;
    border-radius: 12px;
}

QLabel#calc_metric_header_title,
QLabel#calc_days_title {
    color: #1f2f43;
    font-size: 13px;
    font-weight: 700;
}

QLabel#calc_metric_header_value,
QLabel#calc_days_value {
