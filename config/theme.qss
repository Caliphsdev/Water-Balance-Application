QLabel#calc_metric_header_badge[metricState="excellent"] {
    background: #e7f4ea;
    border: 1px solid #bfe2c6;
    color: #185d2c;
}

QLabel#calc_metric_header_badge[metricState="good"] {
    background: #eff6ff;
    border: 1px solid #bfdbfe;
    color: #1d4ed8;
}

QLabel#calc_metric_header_badge[metricState="needs_improvement"] {
    background: #fff7e6;
    border: 1px solid #f7ddad;
    color: #8a5800;
}

QLabel#calc_days_badge[runwayState="healthy"] {
    background: #e7f4ea;
    border: 1px solid #bfe2c6;
    color: #185d2c;
}

QLabel#calc_days_badge[runwayState="moderate"] {
